@model MvcApplication1.Models.ArticleModel

@{
    ViewBag.Title = "Home Page";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
            </hgroup>
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                    <li data-target="#myCarousel" data-slide-to="3"></li>
                    <li data-target="#myCarousel" data-slide-to="4"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    @{
                        int i = 0;
                        foreach (var article in ViewBag.Recent)
                        {
                            try
                            {
                                if (article.Heading != null)
                                {
                                    if (i == 0)
                                    {
                                        <div class="item active">
                                            <a href="/article/view/@article.Heading">
                                                <img src="~/Images/@article.Image" alt="First slide">
                                                <div class="carousel-caption">
                                                    <div class="col-md-4 col-md-offset-8">
                                                        <h3>@article.Heading</h3>
                                                        </div>
                                                    </div>
                                            </a>
                                        </div>
                                    }
                                    <div class="item">
                                        <a href="/article/view/@article.Heading">
                                            <img src="~/Images/@article.Image" alt="Slide @i">
                                            <div class="carousel-caption">
                                                <div class="col-md-4 col-md-offset-8">
                                                    <div><h1>@article.Heading</h1></div>
                                                    <div><h3>@article.Sub</h3></div>
                                                    <div id="content"style="text-overflow: ellipsis;white-space: nowrap;overflow: hidden;"><h5>@article.ArticleContent </h5><h6>...</h6></div>
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                }
                            }
                            catch { }


                            i++;
                        }
                    }
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            
        }
        
